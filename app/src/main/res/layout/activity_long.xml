<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LongActivity">

    <Button
            android:text="@string/lancer"
            android:layout_width="173dp"
            android:layout_height="85dp" android:id="@+id/lancer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="297dp"
            android:layout_height="78dp"
            android:id="@+id/progressBar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lancer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.946"/>
    <TextView
            android:layout_width="192dp"
            android:layout_height="95dp" android:id="@+id/temps"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/progressBar" app:layout_constraintStart_toStartOf="parent"
            android:foregroundGravity="center_vertical" android:gravity="center"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.605"/>
</androidx.constraintlayout.widget.ConstraintLayout>