<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        tools:context=".ChronometreActivity" android:background="#FFFFFF">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/LinearLayout">
        <ImageView
                android:layout_width="94dp"
                android:layout_height="97dp" app:srcCompat="@drawable/contact" android:id="@+id/contactPhoto"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/linearLayout"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="16dp">
            <TextView
                    android:text="@string/nom"
                    android:layout_width="match_parent"
                    android:layout_height="49dp" android:id="@+id/nom" android:textSize="24sp"
                    android:textColorLink="#000000"/>
            <TextView
                    android:text="@string/num"
                    android:layout_width="174dp"
                    android:layout_height="53dp" android:id="@+id/num" android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>