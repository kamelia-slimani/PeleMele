<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CapteurActivity">

    <Switch
            android:text="@string/on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/on_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:minHeight="48dp" app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintVertical_bias="0.039"/>
    <ImageView
            android:layout_width="165dp"
            android:layout_height="295dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/canvas" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/on_off" tools:ignore="ImageContrastCheck"/>
</androidx.constraintlayout.widget.ConstraintLayout>