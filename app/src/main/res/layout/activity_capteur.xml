<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CapteurActivity" android:id="@+id/valeurAccel">

    <Switch
            android:text="@string/activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/on_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:minHeight="48dp" app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintVertical_bias="0.039"/>
    <ImageView
            android:layout_width="384dp"
            android:layout_height="412dp" app:srcCompat="@drawable/boussole"
            android:id="@+id/boussole" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/on_off" tools:ignore="ImageContrastCheck"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="183dp"
            android:layout_height="113dp" android:id="@+id/valAccel"
            android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/boussole" app:layout_constraintStart_toEndOf="@+id/valMagneto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.556" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="183dp"
            android:layout_height="113dp" android:id="@+id/valMagneto"
            android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/boussole"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.556" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>
    <RelativeLayout
            android:layout_width="397dp"
            android:layout_height="407dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/boussole" app:layout_constraintBottom_toBottomOf="@+id/boussole"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/boussole" android:layout_marginStart="36dp"
            android:id="@+id/fleche">

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>