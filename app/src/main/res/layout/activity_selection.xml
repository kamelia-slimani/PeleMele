<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelectionActivity">

    <ImageView
            android:layout_width="341dp"
            android:layout_height="628dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/photoSelect"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp" android:adjustViewBounds="true"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.493"/>
    <SurfaceView
            android:layout_width="340dp"
            android:layout_height="629dp" android:id="@+id/surfaceView"
            app:layout_constraintTop_toTopOf="@+id/photoSelect" app:layout_constraintEnd_toEndOf="@+id/photoSelect"
            app:layout_constraintBottom_toBottomOf="@+id/photoSelect"
            app:layout_constraintStart_toStartOf="@+id/photoSelect"/>
</androidx.constraintlayout.widget.ConstraintLayout>