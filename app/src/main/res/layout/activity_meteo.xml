<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MeteoActivity">

    <Button
            android:text="@string/temps"
            android:layout_width="294dp"
            android:layout_height="82dp" android:id="@+id/longlat"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp" app:layout_constraintVertical_bias="0.859"
            app:layout_constraintHorizontal_bias="0.702"
            android:layout_marginBottom="200dp"/>
    <TextView
            android:text="@string/temperature"
            android:layout_width="194dp"
            android:layout_height="40dp" android:id="@+id/temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_marginStart="1dp" android:textSize="20sp" android:layout_marginBottom="184dp"
            app:layout_constraintEnd_toStartOf="@+id/temp_min"/>
    <TextView
            android:text="@string/minimum"
            android:layout_width="175dp"
            android:layout_height="wrap_content" android:id="@+id/temp_min"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.995"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/temp_max" android:layout_marginBottom="56dp"/>
    <TextView
            android:text="@string/ressenti"
            android:layout_width="175dp"
            android:layout_height="wrap_content" android:id="@+id/ressenti"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temperature" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintVertical_bias="0.217" android:layout_marginStart="1dp" android:textSize="20sp"
            android:layout_marginTop="15dp" app:layout_constraintEnd_toStartOf="@+id/temp_max"/>
    <TextView
            android:text="@string/maximum"
            android:layout_width="175dp"
            android:layout_height="wrap_content" android:id="@+id/temp_max"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temperature"
            app:layout_constraintHorizontal_bias="0.995"
            app:layout_constraintVertical_bias="0.62" android:layout_marginStart="1dp" android:textSize="20sp"
            android:layout_marginTop="15dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/pression"/>
    <TextView
            android:text="@string/pression"
            android:layout_width="175dp"
            android:layout_height="wrap_content" android:id="@+id/pression"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temperature" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.995"
            app:layout_constraintVertical_bias="0.76" android:layout_marginStart="1dp" android:textSize="20sp"
            android:layout_marginTop="15dp"/>
    <TextView
            android:text="@string/humidite"
            android:layout_width="175dp"
            android:layout_height="wrap_content" android:id="@+id/humidite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ressenti" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            android:layout_marginStart="1dp" android:textSize="20sp"
            android:layout_marginTop="15dp" app:layout_constraintEnd_toStartOf="@+id/pression"/>
    <TextView
            android:text="@string/ville"
            android:layout_width="361dp"
            android:layout_height="134dp" android:id="@+id/ville"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toTopOf="@+id/longlat" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="34sp" android:gravity="center"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="216dp"
            android:layout_height="221dp"
            android:id="@+id/icone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="90dp"
            android:layout_marginBottom="109dp" app:layout_constraintBottom_toTopOf="@+id/longlat"
            android:layout_marginEnd="90dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/ville" app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintVertical_bias="0.07"/>
</androidx.constraintlayout.widget.ConstraintLayout>